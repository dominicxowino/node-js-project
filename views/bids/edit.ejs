<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">place Your Bid</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/auctions/<%= auction_id %>/bids/<%= bid._id %>?_method=PUT" method="POST">
                <div class="form-group">
                <input class="form-control" type="number" name="bid[price]" value="<%= bid.price %>"min="1000" step="100" >
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/auctions">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

